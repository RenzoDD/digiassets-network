<!doctype html>
<html lang="en" class="h-100" prefix="og: http://ogp.me/ns#">

<head>
	<%- include('./partials/meta') %>
	<%- include('./partials/analytics') %>

	<link href="/vendor/bootstrap.css" rel="stylesheet">
	<link href="/vendor/bootstrap-icons.css" rel="stylesheet">
	<link href="/css/style.css" rel="stylesheet">

	<link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico" />
	<title><%- info.title %></title>
</head>

<body class="d-flex flex-column h-100">
	<%- include('./partials/header') %>

	<main class="container mt-5">
		<h1 class="text-center mb-4"><b>DigiByte Address</b></h1>
		<hr>
		<div class="row">
			<div class="col-md-6">
				<h3><b>QR Code</b></h3>
				<div class="text-center">
					<img address="<%- Address.address %>" class="img-fluid w-50 mb-3 DigiQR" logo="2" r="0">
				</div>
			</div>
			<div class="col-md-6">
				<h3><b>Information</b></h3>
				<div class="list-group list-group-numbered">
					<div class="list-group-item d-flex justify-content-between align-items-start">
						<div class="ms-2 me-auto text-break">
							<div class="fw-bold">Address</div>
							<%- Address.address %>
						</div>
					</div>
					<div class="list-group-item d-flex justify-content-between align-items-start">
						<div class="ms-2 me-auto text-break">
							<div class="fw-bold">Assets</div>
							<%- assets.length %>
						</div>
					</div>
					<div class="list-group-item d-flex justify-content-between align-items-start">
						<div class="ms-2 me-auto text-break">
							<div class="fw-bold">Verified</div>
							<%- Address.kyc ? "Yes" : "No" %>
						</div>
					</div>
					<% if (Address.kyc) { %>
						<div class="list-group-item d-flex justify-content-between align-items-start">
							<div class="ms-2 me-auto text-break">
								<div class="fw-bold">Country</div>
								<%- Address.kyc.country %>
							</div>
						</div>
						<div class="list-group-item d-flex justify-content-between align-items-start">
							<div class="ms-2 me-auto text-break">
								<div class="fw-bold">Owner</div>
								<span class="text-monospace">
									<%- Address.kyc.name ? Address.kyc.name : "Anonymous" %>
								</span>
							</div>
						</div>
					<% } %>
				</div>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-md-8">
				<h3><b>Assets</b></h3>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">Asset ID</th>
								<th scope="col">Quantity</th>
							</tr>
						</thead>
						<tbody>
							<% assets.forEach(asset => { %>
							<tr>
								<th class="" scope="row">
									<a class="link" href="/asset/<%- asset %>">
										<%- asset %>
									</a>
								</th>
								<td><%- Address.assets[asset] %></td>
							</tr>
							<% }); %>
						</tbody>
					</table>
				</div>

			</div>
		</div>
	</main>

	<%- include('./partials/footer') %>

	<script src="/vendor/jquery.js"></script>
	<script src="/vendor/bootstrap.js"></script>
	<script src="/vendor/digiqr.js"></script>
	<script src="/js/main.js"></script>
</body>

</html>